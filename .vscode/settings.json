{
  // 기본 포매터를 정의합니다.
  "editor.defaultFormatter": "ms-vscode.cpptools",

  // 저장할 때 코드를 포매팅합니다.
  "editor.formatOnSave": true,

  // 코드 포매팅 스타일을 정의합니다.
  "C_Cpp.clang_format_fallbackStyle": "Google",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.associations": {
    "bit": "cpp",
    "compare": "cpp",
    "memory": "cpp",
    "type_traits": "cpp",
    "new": "cpp",
    "tuple": "cpp",
    "utility": "cpp"
  }
}
